<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView
           android:layout_gravity="center"
           android:id="@+id/img_news_comment_user"
           android:layout_width="@dimen/activity_user_top"
           android:layout_height="@dimen/activity_user_top"
           android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/txt_news_comment_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/txt_news_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_news_comment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
</LinearLayout>