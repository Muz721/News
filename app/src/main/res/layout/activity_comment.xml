<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:background="@color/colorRed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_news_comment_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"/>
    <TextView
        android:gravity="center"
        android:textSize="@dimen/activity_title"
        android:textColor="@color/colorWhiteWhite"
        android:text="@string/txt_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
    <me.maxwin.view.XListView
        android:id="@+id/XList_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></me.maxwin.view.XListView>
</LinearLayout>