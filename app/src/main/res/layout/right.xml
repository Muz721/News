<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left">
<ImageView
    android:id="@+id/img_right_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="false" />
    <TextView
        android:id="@+id/txt_right_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_right_enter"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textColor="#fff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_little_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:id="@+id/img_right_Wechat"
            app:srcCompat="@drawable/fun_share_weixin" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/addimport_qq"
            android:id="@+id/img_right_qq" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fun_share_friends"
            android:id="@+id/img_right_friend" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fun_share_weibo"
            android:id="@+id/img_right_sina" />
    </LinearLayout>
</LinearLayout>